{
  "name": "@alcyone-labs/simple-logger",
  "version": "1.0.0",
  "description": "A lightweight, truly portable logging library with Zod validation and multi-transport support.",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "vitest run",
    "build": "tsc && rolldown -c",
    "lint": "oxlint --ignore-path .gitignore",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "logger",
    "logging",
    "typescript",
    "portable",
    "zod",
    "json-logger"
  ],
  "author": "Alcyone Labs",
  "license": "MIT",
  "packageManager": "pnpm@10.28.1",
  "type": "module",
  "dependencies": {
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/node": "^25.0.9",
    "oxlint": "^1.41.0",
    "rolldown": "1.0.0-beta.60",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  }
}
